{
  "trailingSlash": true,
  "cleanUrls": true,

  "redirects": [
    {
      "source": "/:path(.*)\\.html",
      "destination": "/:path/",
      "permanent": true
    }
  ],

  "rewrites": [
    {
      "source": "/:path((?!.*\\.).*)/",
      "destination": "/:path/index.html"
    }
  ]
}
