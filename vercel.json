{
  "rewrites": [
    { "source": "/(.*)", "destination": "/$1.html" }
  ],
  "redirects": [
    { "source": "/(.*)\\.html", "destination": "/$1", "permanent": true }
  ]
}

{
  "redirects": [
    {
      "source": "/:path(.*)\\.html",
      "destination": "/:path",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/:path((?!.*\\.).*)",
      "destination": "/:path.html"
    }
  ]
}
